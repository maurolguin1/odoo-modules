<openerp>
    <data>
        <record id="sale_order_stats_view_order_form" model="ir.ui.view">
            <field name="name">sale_order_stats.view_order_form</field>
            <field name="model">sale.order</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="sale.view_order_form" />

            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                    <field name="x_purchase_price" groups="base.group_user" invisible="True" />
                    <field name="x_cost_subtotal" groups="base.group_user" invisible="True" />
                    <field name="x_margin_amount" groups="base.group_user" invisible="True" />
                    <field name="x_margin_rate" groups="base.group_user" invisible="True" />
                    <field name="x_markup_rate" groups="base.group_user" invisible="True" />
                </xpath>

                <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                    <field name="x_purchase_price" groups="base.group_user" invisible="True" />
                    <field name="x_cost_subtotal" groups="base.group_user" invisible="True" />
                    <field name="x_margin_amount" groups="base.group_user" invisible="True" />
                    <field name="x_margin_rate" groups="base.group_user" invisible="True" />
                    <field name="x_markup_rate" groups="base.group_user" invisible="True" />
                </xpath>

                <xpath expr="//sheet" position="before">
                    <sheet class="sale_order_stats">
                        <div>
                            <label for="x_amount_untaxed" />
                            <field readonly="1" name="x_amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </div>

                        <div groups="sale.group_discount_per_so_line">
                            <label for="x_discount_amount" />
                            <field readonly="1" name="x_discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </div>

                        <div groups="sale.group_discount_per_so_line">
                            <label for="x_discount_rate" />
                            <field readonly="1" name="x_discount_rate" /> %
                        </div>

                        <div>
                            <label for="x_margin_amount" />
                            <field readonly="1" name="x_margin_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </div>

                        <div>
                            <label for="x_margin_rate" />
                            <field readonly="1" name="x_margin_rate" /> %
                        </div>

                        <div>
                            <label for="x_markup_rate" />
                            <field readonly="1" name="x_markup_rate" /> %
                        </div>
                    </sheet>
                </xpath>
            </field>
        </record>
    </data>
</openerp>



