<openerp>
    <data>
        <record id="product_default_uos_product_template" model="ir.ui.view">
            <field name="name">product_default_uos.product_template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />

            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <label for="uom_so_list_price" groups="product.group_uom" />

                    <div name="uom_so_list_price" groups="product.group_uom">
                        <field name="uom_so_list_price"
                               class="oe_inline"
                               nolabel="1"
                               widget='monetary'
                               options="{'currency_field': 'currency_id'}"
                               readonly="True"
                        />

                        <span style="margin: 0 5px">/</span>

                        <field name="uom_so_list_price_uom"
                               class="oe_inline"
                               nolabel="1"
                               readonly="True"
                        />
                    </div>
                </xpath>

                <xpath expr="//div[@name='standard_price_uom']" position="after">
                    <label for="uom_so_standard_price" groups="product.group_uom" />

                    <div name="uom_so_standard_price" groups="product.group_uom">
                        <field name="uom_so_standard_price"
                               class="oe_inline"
                               nolabel="1"
                               widget='monetary'
                               options="{'currency_field': 'currency_id'}"
                               readonly="True"
                        />

                        <span style="margin: 0 5px">/</span>

                        <field name="uom_so_standard_price_uom"
                               class="oe_inline"
                               nolabel="1"
                               readonly="True"
                        />
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>