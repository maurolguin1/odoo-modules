<openerp>
    <data>
        <record id="product_surface_product" model="ir.ui.view">
            <field name="name">product_surface.product</field>
            <field name="model">product.product</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />

            <field name="arch" type="xml">
                <xpath expr="//field[@name='width']" position="after">
                    <field name="surface" readonly="0" attrs="{'invisible': [('type', 'not in', ['product', 'consu'])]}" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>