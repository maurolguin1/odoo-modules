<openerp>
    <data>
        <record id="stock_picking_nomenclature_pack_operation_lot_form_view" model="ir.ui.view">
            <field name="name">stock_picking_nomenclature.pack_operation_lot_form_view</field>
            <field name="model">stock.pack.operation</field>
            <field name="priority">100</field>
            <field name="inherit_id" ref="stock.view_pack_operation_lot_form" />

            <field name="arch" type="xml">
                <xpath expr="//field[@name='pack_lot_ids']" position="attributes">
                    <attribute name="context">{'operation_id': active_id}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>



